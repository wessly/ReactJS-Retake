<div class="container-fluid">
    <div class="container">
        <h1>{{title}}</h1>
        <p>Welcome to {{title}}</p>
        <br /> 
        {{#each allArticles}}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{this.picturelr}}" alt="{{this.title}}">
            <img class="card-img-top" src="{{this.picture}}" alt="{{this.title}}" id="hiResImg">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="{{this._id}}" class="btn btn-primary">Отвори</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>